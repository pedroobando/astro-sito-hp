---
import menuItems from '../data/menuItems';
import MenuContainer from '../components/MenuContainer.astro';
import MenuItem from '../components/MenuItem.astro';

export interface Props {
  title: string;
  frontmatter?: string;
}

const { title, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{!frontmatter ? title : frontmatter}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <MenuContainer>
      {menuItems.map(({ icon, title, url }) => <MenuItem icon={icon} title={title} url={url} />)}
    </MenuContainer>
    <div class="container">
      <div class="logo">
        <img src="/assets/hero-logo.webp" width="400" alt="" />
      </div>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
  }
  html {
    font-family: 'Crimson Text', serif;
    background-color: #000;
  }
  body {
    font-family: 'Crimson Text', serif;
    background-image: url(../../assets/bg.webp);
    margin: 0;
    min-height: 100vh;
    color: white;
    font-size: 18px;
  }
  .container a {
    color: rgb(255, 179, 0);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .container {
    margin-top: 120px;
    width: 700px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
  }

  .logo {
    text-align: center;
    position: relative;
    top: -100px;
    margin-bottom: -50px;
  }

  p img {
    width: 100%;
  }
</style>
